
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="ITAcademy">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!--        <jta-data-source>java:/DefaultDS</jta-data-source>-->
        <!--        <mapping-file>ormap.xml</mapping-file>-->
        <!--        <jar-file>My App.jar</jar-file>-->
        <class>ITAcademy.Entity.Course</class>
        <class>ITAcademy.Entity.Teacher</class>
        <class>ITAcademy.Entity.Student</class>
        <class>ITAcademy.Entity.Task</class>
        <class>ITAcademy.Entity.ReviewTask</class>
        <class>ITAcademy.Entity.Review</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Courses?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>

            <!--
<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>